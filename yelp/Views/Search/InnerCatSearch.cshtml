@{
    ViewData["Title"] = "Yodel | Category Search"; 
}

@Html.Partial("NavbarPartial");

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="panel p-3">
                <div class="panel-body">
                    <form asp-controller="Search" asp-action="CitySearch" method="POST">
                        <div class="row col-md-12">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md">
                                            <select tabindex="2" class="form-control" name="category">
                                                @if(ViewBag.Cats != null)
                                                {
                                                    @foreach(var category in ViewBag.Cats)
                                                    {
                                                        <option value="@category.Category">@category.Category</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md">
                                            <input type="submit" tabindex="13" class="form-control btn btn-outline-primary" value="Filter results">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <h3>Results</h3>

    @if(ViewBag.noResults != null)
    {
        <p>@ViewBag.noResults</p>
    }
    <form>
        <input type="submit" class="btn btn-outline-primary" asp-action="NewBiz" asp-controller="Business" value="Add a business">
    </form>
</div>
@Html.Partial("FooterPartial")
