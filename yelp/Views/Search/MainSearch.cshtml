@using yelp.Models
@model List<Business>

@{
    ViewData["Title"] = "Yodel | Search"; 
}

@Html.Partial("NavbarPartial")

<div id="city-container" class="container-fluid">
    <h2 class="text-center text-purple">Search businesses by city, name, or category</h2>
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="panel p-3">
                <div class="panel-body">
                    <form class="col-md form-inline" asp-action="Search" asp-controller="Search" method="POST">
                        <div class="row col-md">
                            <div class="col-md">
                                <div class="form-group row">
                                    <div class="row">
                                        <div class="col-md">
                                            <input class="form-control" type="text" name="searchContent" placeholder="Enter your search">
                                            <select class="form-control" name="categoryContent">
                                                <option value="Name">Name</option>
                                                <option value="Category">Category</option>
                                                <option value="City">City</option>
                                            </select>
                                            <button class="btn btn-outline-primary" type="submit">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md mx-auto">
            <div class="panel p-3">
                <div class="panel-body">
                    <form class="col-md float-right form-inline">
                        <div class="row col-md">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <div class="row">
                                        <div class="col-md">
                                            <input class="btn btn-outline-primary" type="submit" asp-action="NewBiz" asp-controller="Business" value="Add a business">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if(Model != null)
    {
        <h4 id="test1" class="text-purple">Results</h4>
        <div class="row">
            @foreach (var business in Model)
            {
                <p id="test2" class="text-justify"><a href="/biz/@business.BusinessId">@business.Name</a></p>
            } 
        </div>
    }

</div>
@Html.Partial("FooterPartial")